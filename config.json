{
  "proxyUrl": "http://qwc2.sourcepole.ch/api/proxy?url=",
  "qwc2serverUrl": "http://qwc2.sourcepole.ch/api/",
  "translationsPath": "/translations",
  "assetsPath": "/assets",
  "urlPositionFormat": "extent",
  "urlPositionCrs": "",
  "preserveExtentOnThemeSwitch": true,
  "preserveBackgroundOnThemeSwitch": true,
  "plugins": {
      "mobile": [
        {
          "name": "Map"
        },
        {
          "name": "LocateButton",
          "cfg": {
            "position": 1
          }
        },
        {
          "name": "BackgroundSwitcher",
          "cfg": {
            "position": 0
          }
        },
        {
            "name": "TopBar",
            "cfg": {
              "menuItems": [
                {"key": "ThemeSwitcher", "icon": "img/themes.svg"},
                {"key": "LayerTree", "icon": "img/layers.svg"},
                {"key": "Share", "icon": "img/share.svg"},
                {"key": "Tools", "icon": "img/tools.svg", "subitems": [
                  {"key": "Measure", "icon": "img/measure_white.svg"},
                  {"key": "Draw", "icon": "img/draw.svg"},
                  {"key": "DxfExport", "icon": "img/dxfexport.svg"},
                  {"key": "RasterExport", "icon": "img/rasterexport.svg"}
                ]},
                {"key": "Print", "icon": "img/print.svg"},
                {"key": "Help", "icon": "img/info.svg"}
              ],
              "searchOptions": {
                "minScale": 1000,
                "showProviderSelection": false
              },
              "appMenuClearsTask": true
            }
        },
        {
          "name": "ThemeSwitcher"
        },
        {
          "name": "Measure",
          "cfg": {
            "showMeasureModeSwitcher": true
          }
        },
        {
          "name": "Identify",
          "cfg": {
            "params": {
              "FI_POINT_TOLERANCE": 32,
              "FI_LINE_TOLERANCE": 16,
              "FI_POLYGON_TOLERANCE": 8
            },
            "enableExport": true
          }
        },
        {
          "name": "Share"
        },
        {
          "name": "Print"
        },
        {
          "name": "Help"
        },
        {
          "name": "MapCopyright"
        },
        {
          "name": "LayerTree",
          "cfg": {
            "showLegendIcons": true,
            "showRootEntry": true,
            "showQueryableIcon": true,
            "groupTogglesSublayers": false,
            "layerInfoWindowSize": {"width": 480, "height": 400}
          }
        },
        {
          "name": "DxfExport"
        },
        {
          "name": "RasterExport"
        },
        {
          "name": "Draw"
        }
      ],
      "desktop": [
        {
          "name": "Map"
        },
        {
          "name": "LocateButton"
          ,
          "cfg": {
            "position": 3
          }
        },
        {
          "name": "ZoomIn",
          "cfg": {
            "position": 2
          }
        },
        {
          "name": "ZoomOut",
          "cfg": {
            "position": 1
          }
        },
        {
          "name": "BackgroundSwitcher",
          "cfg": {
            "position": 0
          }
        },
        {
            "name": "TopBar",
            "cfg": {
              "menuItems": [
                {"key": "ThemeSwitcher", "icon": "img/themes.svg"},
                {"key": "LayerTree", "icon": "img/layers.svg"},
                {"key": "Share", "icon": "img/share.svg"},
                {"key": "Tools", "icon": "img/tools.svg", "subitems": [
                  {"key": "Measure", "icon": "img/measure_white.svg"},
                  {"key": "Draw", "icon": "img/draw.svg"},
                  {"key": "DxfExport", "icon": "img/dxfexport.svg"},
                  {"key": "RasterExport", "icon": "img/rasterexport.svg"}
                ]},
                {"key": "Print", "icon": "img/print.svg"},
                {"key": "Help", "icon": "img/info.svg"}
              ],
              "toolbarItems": [
                {"key": "Measure", "mode": "LineString", "icon": "img/measure_line.svg"},
                {"key": "Measure", "mode": "Polygon", "icon": "img/measure_polygon.svg"},
                {"key": "Print", "icon": "img/print.svg"}
              ],
              "searchOptions": {
                "minScale": 1000,
                "showProviderSelection": false
              },
              "appMenuClearsTask": true
            }
        },
        {
          "name": "BottomBar",
          "cfg": {
            "viewertitleUrl": "http://qgis.org/",
            "termsUrl":  "http://qgis.org/"
          }
        },
        {
          "name": "Measure",
          "cfg": {
            "showMeasureModeSwitcher": true
          }
        },
        {
          "name": "ThemeSwitcher"
        },
        {
          "name": "LayerTree",
          "cfg": {
            "showLegendIcons": true,
            "showRootEntry": true,
            "showQueryableIcon": true,
            "allowMapTips": true,
            "groupTogglesSublayers": false,
            "layerInfoWindowSize": {"width": 480, "height": 400}
          }
        },
        {
          "name": "Identify",
          "cfg": {
            "params": {
              "FI_POINT_TOLERANCE": 16,
              "FI_LINE_TOLERANCE": 8,
              "FI_POLYGON_TOLERANCE": 4
            },
            "enableExport": true,
            "initialWidth": 480,
            "initialHeight": 550
          }
        },
        {
          "name": "MapTip"
        },
        {
          "name": "Share"
        },
        {
          "name": "Print"
        },
        {
          "name": "Help"
        },
        {
          "name": "MapCopyright"
        },
        {
          "name": "DxfExport"
        },
        {
          "name": "RasterExport"
        },
        {
          "name": "Draw"
        }
      ]
  }
}
